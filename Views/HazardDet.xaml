<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RssMob.Views.HazardDet"
            xmlns:local="clr-namespace:RssMob.Models"
             x:DataType="local:Hazard"
             Title="Hazard">
    <ScrollView VerticalOptions="FillAndExpand">
        <VerticalStackLayout>
            <Label Text="Hazard:" FontSize="14"></Label>
            <Entry FontSize="14" Placeholder="Hazard"
            Text="{Binding Detail}"
            PlaceholderColor="Navy" />
            <Button Clicked="SaveClose_Clicked" TextColor="Black" FontSize="14"  FontAttributes="Bold" Text="Submit"></Button>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>