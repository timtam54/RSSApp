<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RssMob.Views.Photo"
             Title="Photo">
    <VerticalStackLayout>
        <ActivityIndicator IsVisible="false" IsRunning="false" WidthRequest="300" HeightRequest="300" Color="red" x:Name="Indi"></ActivityIndicator>
        <Label IsVisible="false" x:Name="lblUpload" FontSize="20" TextColor="red">Uploading image.  Please wait til complete....</Label>
        <Image x:Name="Image_Upload" HorizontalOptions="Center"></Image>

        <ImageButton Clicked="Button_Clicked" Source="camera.ico"></ImageButton>
        <ImageButton Source="gallery.ico" Clicked="Gallery_Clicked" ></ImageButton>
        <ImageButton Clicked="Save_Clicked" Source="save.ico"></ImageButton>
    </VerticalStackLayout>
</ContentPage>
